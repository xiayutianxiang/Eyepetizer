<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="@dimen/dimen_39dp"
            android:layout_height="@dimen/dimen_39dp"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/ic_calendar_black_19dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorFullWidth="false"
            app:tabMode="auto"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/colorTextSecondary" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/dimen_43dp"
            android:layout_height="@dimen/dimen_43dp"
            android:layout_alignParentEnd="true"
            android:padding="13dp"
            android:src="@drawable/ic_search_black_17dp" />

    </RelativeLayout>
</layout>